<section class="single-category">
  <div class="nav">
    <h5>transactions</h5>
  </div>

  <p style="color: green"><%= notice %></p>

  <%= link_to "", groups_path, class: 'back' %>

  <%= render @group %>

  <div class="expenses-list">
    <h3>Expenses</h3>
    <% if @group.expenses.any? %>
      <table>
        <thead>
          <tr>
            <th>Name</th>
            <th>Amount</th>
            <th>Date</th>
          </tr>
        </thead>
        <tbody>
          <% @group.expenses.order(created_at: :desc).each do |expense| %>
            <tr>
              <td><%= expense.name %></td>
              <td><%= expense.amount %></td>
              <td><%= expense.created_at.strftime('%B %d, %Y') %></td>
            </tr>
          <% end %>
        </tbody>
      </table>
      <p>Total amount: <%= @group.expenses.sum(:amount) %></p>
    <% else %>
      <p>No expenses found for this group.</p>
    <% end %>
  </div>

  <%= link_to "Edit this group", edit_group_path(@group) %>

  <%= link_to "New expense", new_group_expense_path(@group) %>

  <%= button_to "Destroy this group", @group, method: :delete %>
</section>
